<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home" 
    android:background="#00A1D9">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButton1"
        android:src="@drawable/ic_add_habit"
        android:background="@drawable/home_button_shape"
        android:onClick="chooseHabit" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_settings"
        android:background="@drawable/home_button_shape"
        android:onClick="settings" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_below="@+id/imageButton4"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_social"
        android:background="@drawable/home_button_shape"
        android:onClick="friends" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_marginBottom="30dp"
        android:background="@drawable/home_button_shape"
        android:onClick="myGoals"
        android:src="@drawable/ic_my_goals" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton8"
        android:layout_centerVertical="true"
        android:background="@drawable/home_button_shape"
        android:src="@drawable/ic_global_statistics"
        android:onClick="globalStatistics" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/imageButton5"
        android:background="@drawable/home_button_shape"
        android:src="@drawable/ic_avatar"
        android:onClick="buyAvatar" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_below="@+id/imageButton1"
        android:background="@drawable/home_button_shape"
        android:src="@drawable/ic_trophy"
        android:onClick="ranking" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton8"
        android:background="@drawable/home_button_shape"
        android:src="@drawable/ic_logout"
        android:onClick="logout" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:background="@drawable/home_button_shape"
        android:src="@drawable/ic_launcher"
        android:onClick="userProfile" />

</RelativeLayout>